<UserControl x:Class="GooglePhotoTransferTool.UI.DeviceUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GooglePhotoTransferTool.UI"
             mc:Ignorable="d" 
             d:Background="WhiteSmoke"
             Padding="0,12.5,0,5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image d:Source="/Resources/Android.png" Grid.Row="0" Height="96" Margin="0,0,0,10" Source="{Binding DeviceImage, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="96" />

        <TextBlock d:Text="PIXEL 5" Grid.Row="1" HorizontalAlignment="Center" Text="{Binding DeviceName, RelativeSource={RelativeSource AncestorType=UserControl}}" />

    </Grid>
</UserControl>
