<Window x:Class="AndroidDevManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AndroidDevManager" xmlns:converters="clr-namespace:AndroidDevManager.Converters"
        mc:Ignorable="d"
        AllowsTransparency="True"
        Background="Transparent"
        Closing="Window_Closing"
        IsEnabled="{Binding Initialized}"
        Height="710"
        ResizeMode="NoResize"
        Title="Google Photo Transfer Tool"
        Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">

    <Window.Resources>
        <ResourceDictionary>

            <converters:Converter_DeviceStateToVisibility x:Key="converter_DeviceStateToVisibility"/>
            <converters:Converter_NullToVisibility x:Key="converter_NullToVisibility"/>
            <converters:Converter_BooleanToVisibility x:Key="converter_BooleanToVisibility"/>

            <Style TargetType="Button">
                <Setter Property="Padding" Value="0,5" />
            </Style>

        </ResourceDictionary>
    </Window.Resources>

    <Grid Cursor="{Binding WindowCursor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Background="LightGray" BorderBrush="DimGray" BorderThickness="0,0,0,0.5" CornerRadius="5,5,0,0" Grid.Row="0" Padding="10,7.5">
            <Grid VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Content="Google Photo transfer tool" MouseLeftButtonDown="Lbl_TitleBar_MouseLeftButtonDown" Padding="0" />

                <Button Content="X" Click="Btn_Close_Click" Cursor="Hand" Grid.Column="1" Padding="0" Width="25"  />

            </Grid>
        </Border>

        <Border Background="WhiteSmoke" Grid.Row="1" Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <GroupBox Padding="10" Margin="0,0,0,7.5">
                    <GroupBox.Header>
                        <Label Content="Devices" FontStyle="Italic"/>
                    </GroupBox.Header>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Button Content="Scan devices" Click="Btn_ScanDevices_Click"/>

                        <CheckBox Content="Wireless connection" Grid.Row="1" IsChecked="{Binding WirelessConnection}" Margin="0,12.5,0,0" />

                        <GroupBox Grid.Row="2" Margin="0,10,0,0" Padding="5,10" Visibility="{Binding WirelessConnection, Converter={StaticResource converter_BooleanToVisibility}}">
                            <GroupBox.Header>
                                <Label Content="Connection data" FontStyle="Italic"/>
                            </GroupBox.Header>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <CheckBox Content="Pairing needed (when device has never been connected before)" Grid.Row="0" IsChecked="{Binding PairingNeeded}" />

                                <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="3" Grid.Row="1" Margin="0,10,0,0" Padding="10">
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0" Margin="0,0,10,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Label Grid.Row="0"
                             Content="Device IP address:"
                             FontStyle="Italic"
                             Margin="0,0,0,5"
                             Padding="0"/>

                                            <TextBox Grid.Row="1" Height="25" x:Name="Tb_DeviceIp"/>
                                        </Grid>

                                        <Grid Grid.Column="1" Margin="0,0,10,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Label Grid.Row="0"
                             Content="Device port:"
                             FontStyle="Italic"
                             Margin="0,0,0,5"
                             Padding="0"/>

                                            <TextBox Grid.Row="1" Height="25" x:Name="Tb_DevicePort"/>
                                        </Grid>

                                        <Grid Grid.Column="2" Margin="0,0,10,0" IsEnabled="{Binding PairingNeeded}">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Label Grid.Row="0"
                             Content="Pairing code:"
                             FontStyle="Italic"
                             Margin="0,0,0,5"
                             Padding="0"/>

                                            <TextBox Grid.Row="1" Height="25" x:Name="Tb_DevicePairingCode"/>
                                        </Grid>

                                        <Grid Grid.Column="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition />
                                                <RowDefinition />
                                            </Grid.RowDefinitions>

                                            <Button Click="Btn_ConnectWirelessDevice_Click" Content="Connect" Grid.Row="1" Height="25" Padding="15,0"/>

                                        </Grid>

                                    </Grid>
                                </Border>

                            </Grid>

                        </GroupBox>

                    </Grid>
                </GroupBox>

                <GroupBox Grid.Row="1" IsEnabled="{Binding AreDeviceConnected}" Padding="10">
                    <GroupBox.Header>
                        <Label Content="Photo transfer" FontStyle="Italic"/>
                    </GroupBox.Header>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="15"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border BorderThickness="1" BorderBrush="LightGray" CornerRadius="3" Grid.Column="0" Padding="10, 5">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Label Content="Select origin device" Grid.Row="0"/>

                                    <ComboBox ItemsSource="{Binding Devices}" DisplayMemberPath="Model" Grid.Row="1" SelectedItem="{Binding OriginDevice, Mode=TwoWay}" SelectionChanged="Cb_Devices_SelectionChanged" />

                                    <Grid Grid.Row="2" Margin="0,5,0,0" Visibility="{Binding OriginDevice, Converter={StaticResource converter_NullToVisibility}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Label Content="Name:" Grid.Column="0" Grid.Row="0" />
                                        <Label Content="Product:" Grid.Column="0" Grid.Row="1" />
                                        <Label Content="Model:" Grid.Column="0" Grid.Row="2" />
                                        <Label Content="Serial:" Grid.Column="0" Grid.Row="3" />

                                        <Label d:Content="NAME" Content="{Binding OriginDevice.Name}" FontStyle="Italic" Grid.Column="1" Grid.Row="0" HorizontalContentAlignment="Right" />
                                        <Label d:Content="PRODUCT" Content="{Binding OriginDevice.Product}" FontStyle="Italic" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Right" />
                                        <Label d:Content="MODEL" Content="{Binding OriginDevice.Model}" FontStyle="Italic" Grid.Column="1" Grid.Row="2" HorizontalContentAlignment="Right" />
                                        <Label d:Content="SERIAL" Content="{Binding OriginDevice.Serial}" FontStyle="Italic" Grid.Column="1" Grid.Row="3" HorizontalContentAlignment="Right" />

                                    </Grid>

                                    <Grid Grid.Row="3" Margin="0,5,0,0" Visibility="{Binding OriginDevice, Converter={StaticResource converter_DeviceStateToVisibility}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Label Content="Device is not authorized" FontWeight="DemiBold" Foreground="Red" Grid.Row="0" HorizontalAlignment="Center" />
                                        <Button Click="Btn_AuthorizeDevices_Click" Content="Authorize now" Grid.Row="1" />

                                    </Grid>

                                </Grid>
                            </Border>

                            <Border BorderThickness="1" BorderBrush="LightGray" CornerRadius="3" Grid.Column="2" Padding="10,5,10,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Label Content="Select origin device" Grid.Row="0"/>

                                    <ComboBox ItemsSource="{Binding Devices}" DisplayMemberPath="Model" Grid.Row="1" SelectedItem="{Binding DestinationDevice, Mode=TwoWay}" SelectionChanged="Cb_Devices_SelectionChanged" />

                                    <Grid Grid.Row="2" Margin="0,5,0,0" Visibility="{Binding DestinationDevice, Converter={StaticResource converter_NullToVisibility}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <Label Content="Name:" Grid.Column="0" Grid.Row="0" />
                                        <Label Content="Product:" Grid.Column="0" Grid.Row="1" />
                                        <Label Content="Model:" Grid.Column="0" Grid.Row="2" />
                                        <Label Content="Serial:" Grid.Column="0" Grid.Row="3" />

                                        <Label d:Content="NAME" Content="{Binding DestinationDevice.Name}" FontStyle="Italic" Grid.Column="1" Grid.Row="0" HorizontalContentAlignment="Right" />
                                        <Label d:Content="PRODUCT" Content="{Binding DestinationDevice.Product}" FontStyle="Italic" Grid.Column="1" Grid.Row="1" HorizontalContentAlignment="Right" />
                                        <Label d:Content="MODEL" Content="{Binding DestinationDevice.Model}" FontStyle="Italic" Grid.Column="1" Grid.Row="2" HorizontalContentAlignment="Right" />
                                        <Label d:Content="SERIAL" Content="{Binding DestinationDevice.Serial}" FontStyle="Italic" Grid.Column="1" Grid.Row="3" HorizontalContentAlignment="Right" />

                                    </Grid>

                                    <Grid Grid.Row="3" Margin="0,5,0,0" Visibility="{Binding DestinationDevice, Converter={StaticResource converter_DeviceStateToVisibility}}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Label Content="Device is not authorized" FontWeight="DemiBold" Foreground="Red" Grid.Row="0" HorizontalAlignment="Center" />
                                        <Button Click="Btn_AuthorizeDevices_Click" Content="Authorize now" Grid.Row="1" />

                                    </Grid>

                                </Grid>
                            </Border>


                        </Grid>

                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <CheckBox Content="Delete from origin device once operation completed" IsChecked="True" Margin="0,0,0,10" x:Name="Cb_DeleteFromOrigin"/>
                            <Button Click="Btn_TransferPhotos_Click" Content="Transfer photos" Grid.Row="1" IsEnabled="{Binding Ready}" />
                        </Grid>

                    </Grid>
                </GroupBox>

            </Grid>
        </Border>

        <Border Background="Gainsboro" BorderBrush="DimGray" BorderThickness="0,0.5,0,0" CornerRadius="0,0,5,5" Grid.Row="2" Padding="10, 7.5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label d:Content="Informations..." Content="{Binding ProgressText}" Padding="0" VerticalAlignment="Center" />
                <ProgressBar d:Visibility="Visible" Grid.Column="1" IsIndeterminate="True" Visibility="{Binding ProgressBarVisibility}" Width="150"/>

            </Grid>
        </Border>

    </Grid>
</Window>
